---
import Layout from '../../layouts/Layout.astro';
import Container from '../../components/layout/Container.astro';
import Section from '../../components/layout/Section.astro';
import Navigation from '../../components/layout/Navigation';
import Footer from '../../components/layout/Footer';
import ScrollProgress from '../../components/effects/ScrollProgress';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const studies = await getCollection('case-studies');
  return studies.map(study => ({
    params: { slug: study.slug },
    props: { study },
  }));
}

const { study } = Astro.props;
const { Content } = await study.render();
const allStudies = await getCollection('case-studies');
const related = allStudies.filter(s => s.slug !== study.slug).slice(0, 2);
---

<Layout
  title={`${study.data.title} — NexusAI`}
  description={study.data.excerpt}
>
  <ScrollProgress client:load />
  <Navigation client:load links={[
    { label: "Features", href: "/ai-saas-premium/features/" },
    { label: "Pricing", href: "/ai-saas-premium/pricing/" },
    { label: "About", href: "/ai-saas-premium/about/" },
    { label: "Contact", href: "/ai-saas-premium/contact/" },
  ]} />

  <!-- Hero -->
  <Section size="lg" class="page-hero">
    <div class="hero-bg" aria-hidden="true">
      <div class="grid-bg"></div>
      <div class="gradient-orb gradient-orb--purple"></div>
    </div>
    <Container>
      <div style="position: relative; z-index: 1; max-width: 800px;">
        <nav class="breadcrumbs fade-up" aria-label="Breadcrumb">
          <a href="/ai-saas-premium/">Home</a>
          <span class="sep">/</span>
          <a href="/ai-saas-premium/case-studies/">Case Studies</a>
          <span class="sep">/</span>
          <span class="current">{study.data.company}</span>
        </nav>
        <div class="hero-meta fade-up">
          <span class="company-logo">{study.data.logo}</span>
          <span class="industry-tag">{study.data.industry}</span>
        </div>
        <h1 class="fade-up" style="margin-bottom: var(--space-4); line-height: 1.15;">
          {study.data.title}
        </h1>
        <p class="fade-up delay-1" style="font-size: var(--text-body-lg); color: var(--text-secondary); max-width: 600px;">
          {study.data.excerpt}
        </p>
      </div>
    </Container>
  </Section>

  <!-- Stats Cards -->
  <Section>
    <Container>
      <div class="stats-row fade-up">
        <div class="stat-card">
          <span class="stat-card__value">{study.data.stats.value1}</span>
          <span class="stat-card__label">{study.data.stats.metric1}</span>
        </div>
        <div class="stat-card">
          <span class="stat-card__value">{study.data.stats.value2}</span>
          <span class="stat-card__label">{study.data.stats.metric2}</span>
        </div>
        <div class="stat-card">
          <span class="stat-card__value">{study.data.stats.value3}</span>
          <span class="stat-card__label">{study.data.stats.metric3}</span>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Content -->
  <Section>
    <Container>
      <div class="case-content fade-up">
        <Content />
      </div>
    </Container>
  </Section>

  <!-- CTA Banner -->
  <Section>
    <Container>
      <div class="cta-banner fade-up">
        <h2><span class="gradient-text">Ready to achieve similar results?</span></h2>
        <p style="color: var(--text-secondary); margin-bottom: var(--space-6); font-size: var(--text-body-lg);">
          Start your free trial today and see what NexusAI can do for your team.
        </p>
        <div style="display: flex; gap: var(--space-4); justify-content: center; flex-wrap: wrap;">
          <a href="/ai-saas-premium/pricing/" class="btn btn--primary">Start free trial</a>
          <a href="/ai-saas-premium/case-studies/" class="btn btn--secondary">More case studies</a>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Related Case Studies -->
  {related.length > 0 && (
    <Section>
      <Container>
        <h2 class="fade-up" style="text-align: center; margin-bottom: var(--space-8);">More Case Studies</h2>
        <div class="related-grid">
          {related.map(s => (
            <a href={`/ai-saas-premium/case-studies/${s.slug}/`} class="case-card fade-up">
              <div class="case-card__header">
                <span class="case-card__logo">{s.data.logo}</span>
                <span class="case-card__company">{s.data.company}</span>
              </div>
              <h3 class="case-card__title">{s.data.title}</h3>
              <p class="case-card__excerpt">{s.data.excerpt}</p>
              <span class="case-card__link">Read case study →</span>
            </a>
          ))}
        </div>
      </Container>
    </Section>
  )}

  <Footer client:load />
</Layout>

<style>
  .page-hero { position: relative; overflow: hidden; }
  .hero-bg { position: absolute; inset: 0; z-index: 0; }
  .grid-bg {
    position: absolute; inset: 0;
    background-image: linear-gradient(var(--border) 1px, transparent 1px),
                      linear-gradient(90deg, var(--border) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse at center, black 30%, transparent 70%);
    opacity: 0.4;
  }
  .gradient-orb--purple {
    position: absolute; top: 30%; left: 50%; transform: translate(-50%, -50%);
    width: 500px; height: 500px; border-radius: 50%;
    background: rgba(139, 92, 246, 0.1); filter: blur(80px);
  }
  .breadcrumbs { margin-bottom: var(--space-6); font-size: var(--text-sm); color: var(--text-muted); }
  .breadcrumbs a { color: var(--text-secondary); text-decoration: none; }
  .breadcrumbs a:hover { color: var(--primary); }
  .breadcrumbs .sep { margin: 0 var(--space-2); }
  .breadcrumbs .current { color: var(--text); }

  .hero-meta {
    display: flex; align-items: center; gap: var(--space-3);
    margin-bottom: var(--space-4);
  }
  .company-logo { font-size: 2rem; }
  .industry-tag {
    font-size: var(--text-xs); text-transform: uppercase; letter-spacing: 0.1em;
    color: var(--accent); font-weight: 600;
    padding: var(--space-1) var(--space-3);
    border: 1px solid var(--accent); border-radius: var(--radius-full);
  }

  .stats-row {
    display: grid; grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
  }
  .stat-card {
    text-align: center; padding: var(--space-8);
    background: var(--bg-card); border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    transition: border-color 0.3s;
  }
  .stat-card:hover { border-color: var(--primary); }
  .stat-card__value {
    display: block; font-size: var(--text-h2); font-weight: 700;
    background: var(--gradient-primary); -webkit-background-clip: text;
    -webkit-text-fill-color: transparent; background-clip: text;
    margin-bottom: var(--space-2);
  }
  .stat-card__label { color: var(--text-muted); font-size: var(--text-sm); }

  .case-content {
    max-width: 720px; margin: 0 auto;
    font-size: var(--text-body); line-height: 1.8;
  }
  .case-content :global(h2) {
    font-size: var(--text-h3); margin: var(--space-10) 0 var(--space-4);
    color: var(--text);
  }
  .case-content :global(p) { margin-bottom: var(--space-4); color: var(--text-secondary); }
  .case-content :global(ul), .case-content :global(ol) {
    margin-bottom: var(--space-4); padding-left: var(--space-6); color: var(--text-secondary);
  }
  .case-content :global(li) { margin-bottom: var(--space-2); }
  .case-content :global(strong) { color: var(--text); }
  .case-content :global(blockquote) {
    border-left: 3px solid var(--primary); padding: var(--space-6) var(--space-8);
    margin: var(--space-8) 0; background: var(--bg-card);
    border-radius: 0 var(--radius-lg) var(--radius-lg) 0;
    font-style: italic; font-size: var(--text-body-lg);
  }
  .case-content :global(blockquote p) { color: var(--text); margin-bottom: var(--space-2); }

  .cta-banner {
    text-align: center; padding: var(--space-16) var(--space-8);
    background: var(--bg-card); border: 1px solid var(--border);
    border-radius: var(--radius-xl); position: relative; overflow: hidden;
  }
  .cta-banner h2 { margin-bottom: var(--space-4); }

  .btn { display: inline-block; padding: var(--space-3) var(--space-6); border-radius: var(--radius-full); font-weight: 600; text-decoration: none; transition: transform 0.2s, box-shadow 0.2s; }
  .btn--primary { background: var(--gradient-primary); color: white; }
  .btn--primary:hover { transform: translateY(-2px); box-shadow: 0 8px 20px var(--primary-glow); }
  .btn--secondary { border: 1px solid var(--border); color: var(--text); }
  .btn--secondary:hover { border-color: var(--primary); transform: translateY(-2px); }

  .related-grid {
    display: grid; grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: var(--space-6);
  }
  .case-card {
    display: flex; flex-direction: column; text-decoration: none; color: inherit;
    background: var(--bg-card); border: 1px solid var(--border);
    border-radius: var(--radius-lg); padding: var(--space-8);
    transition: border-color 0.3s, transform 0.3s;
  }
  .case-card:hover { border-color: var(--primary); transform: translateY(-4px); }
  .case-card__header { display: flex; align-items: center; gap: var(--space-3); margin-bottom: var(--space-4); }
  .case-card__logo { font-size: 1.5rem; }
  .case-card__company { font-size: var(--text-sm); font-weight: 600; color: var(--text-secondary); }
  .case-card__title { font-size: var(--text-h4); margin-bottom: var(--space-3); line-height: 1.3; }
  .case-card__excerpt { font-size: var(--text-sm); color: var(--text-secondary); flex: 1; margin-bottom: var(--space-4); }
  .case-card__link { color: var(--primary); font-weight: 600; font-size: var(--text-sm); }

  @media (max-width: 768px) {
    .stats-row { grid-template-columns: 1fr; }
    .stat-card { padding: var(--space-6); }
    .related-grid { grid-template-columns: 1fr; }
  }
</style>
